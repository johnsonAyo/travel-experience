<div class="header"> 
   <h3>Travels Logs</h3> <a  href="/login" class="waves-effect waves-light btn-large"><i class="material-icons right"></i>SignUp / signIn</a>
</div> 
 <div class="wrapper">
        {{#each travels}}
        <div class="col s12 m4">
          <div class="card pageDisplay">
            <div class="card-image">
              <img src="https://upload.wikimedia.org/wikipedia/commons/4/4a/Ikogosi_warm_spring_05.jpg" height="300px">
            </div>
             <div class="card-content center-align">
             <h5>{{title}}</h5>
                <p>{{stripTags (truncate description 50)}}</p>
                <br>
                <div class="chip">
                     <a href="/travels/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/travels/{{_id}}" class="btn grey">Read More</a>
            </div>
           </div>
    </div>
    {{else}}
    <p>No Travel logs to display</p>
    {{/each}}
</div>
