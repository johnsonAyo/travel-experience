<div class="container">
  <h1><i class="fas fa-user-plus"></i> Register</h1>
  <div class="row">
    <form action="/register" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="firstName" type="text" name="firstName" class="validate">
          <label for="firstName">
            <h6><i class="fa fa-address-book" aria-hidden="true"></i>First Name</h6>
          </label>
        </div>
        <div class="input-field col s6">
          <input id="lastName" type="text" name="lastName" class="validate">
          <label for="lastName">
            <h6><i class="fa fa-address-book" aria-hidden="true"></i>Last Name</h6>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate">
          <label for="email">
            <h6><i class="fa fa-address-book" aria-hidden="true"></i>Email</h6>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password2" type="password" name="password2" class="validate">
          <label for="password2"> Confirm Password</label>
        </div>
      </div>
      <div class="row">
        <input type="submit" value="Register" class="btn">
      </div>
    </form>
  </div>
</div>